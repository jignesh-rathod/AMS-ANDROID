<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSubjectAndSemesterAndDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            tools:text="5 - A - Android"
            android:textColor="@color/primary_light"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPresentStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            tools:text="10"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/green"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvAbsentStudents"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAbsentStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            tools:text="10"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPerson"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_person"
            android:tint="@color/secondary_light"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectAndSemesterAndDivision"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription,UseAppTint" />

        <TextView
            android:id="@+id/tvFacultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="Jignesh Rathod"
            android:textSize="16sp"
            android:textColor="@color/primary_light"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivPerson"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectAndSemesterAndDivision" />

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_time"
            android:tint="@color/secondary_light"
            app:layout_constraintTop_toBottomOf="@id/ivPerson"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription,UseAppTint" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            tools:text="9:30 to 10:15"
            android:textSize="16sp"
            android:textColor="@color/primary_light"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivTime"
            app:layout_constraintTop_toBottomOf="@id/tvFacultyName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>